/* 创建2个表 */
create table soaps(soapid int, sname char(28), network char(4), rating real);
create table stars(starid int, stname char(20), plays char(12), soapid int);

/* 确保它们已经存入数据字典 */
help table soaps;
help table stars;

/* 删除表 */
destroy table stars;
